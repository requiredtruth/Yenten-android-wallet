<?xml version="1.0" encoding="utf-8"?>
<com.yentenandroidwallet.presenter.customviews.BRLockScreenConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_layout_claim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bread_gradient"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/YentenLogo"
                android:layout_width="128dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/brd_logo_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.yentenandroidwallet.presenter.customviews.BRText
                android:id="@+id/textClaim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"

                android:lineSpacingMultiplier="1.3"
                android:text="@string/Intro.claim"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/header"
                app:customTFont="CircularPro-Book.otf"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/YentenLogo"
                tools:layout_editor_absoluteX="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textClaim">

                <com.yentenandroidwallet.presenter.customviews.BRButton
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/transparent"
                    android:text="@string/Intro.btnAccept"
                    android:textSize="18sp"
                    app:buttonType="1"
                    app:isBreadButton="true" />

                <com.yentenandroidwallet.presenter.customviews.BRButton
                    android:id="@+id/btnDecline"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:text="@string/Intro.btnDecline"
                    android:textSize="18sp"
                    app:buttonType="1"
                    app:isBreadButton="true" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</com.yentenandroidwallet.presenter.customviews.BRLockScreenConstraintLayout>
